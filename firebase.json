{
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "function": "api"
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "functions": {
    "sources": "functions",
    "runtime": "16",
    "source": "functions"
  },
  "emulators": {
    "hosting": {
      "port": "5050",
      "host": "localhost"
    },
    "functions": {
      "port": "5080",
      "host": "localhost"
    }
  }
}
